<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <TextView
        android:id="@+id/list_item_routine_title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Routine Title"
        android:textStyle="bold"
        android:padding="4dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/list_item_routine_days_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:text="Days a Week: "
            android:padding="4dp"/>

        <TextView
            android:id="@+id/list_item_routine_length_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:text="Cycle Length: "
            android:padding="4dp"/>
    </LinearLayout>


</LinearLayout>